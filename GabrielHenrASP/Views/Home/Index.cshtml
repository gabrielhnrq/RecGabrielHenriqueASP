<h3 class="tittle">Ultimas Notícias!</h3>
    <section class="bottom-slider">
        <div class="course_demo1">
            <ul id="flexiselDemo1">
                @foreach (var item in Model)
                {
            <li>
                <div class="blog-item">
                    <img src="@Url.Content(item.Capa)" alt=" " class="img-fluid" />
                    <a href="~/News/Details/@item.NewsId"><button type="button" class="btn btn-primary play" data-toggle="modal" data-target="#exampleModal">
                        <i class="fa fa-newspaper-o"></i>
                    </button></a>

                    <div class="floods-text">
                        <h3>
                            @Html.DisplayFor(modelItem => item.Title)
                            <span>
                                @Html.DisplayFor(modelItem => item.Category.Name)
                                <label>|</label>
                                <i>@Html.DisplayFor(modelItem => item.Author)</i>
                            </span>
                        </h3>

                    </div>
                </div>
            </li>
                }
           
            
            
            </ul>
        </div> 
    </section>
    <!--/main-->
    <section class="main-content-w3layouts-agileits">
        <div class="container">
            <div class="row">
                <!--left-->
                <div class="col-lg-8 left-blog-info-w3layouts-agileits text-left">
                <!--//silder-->
                <div class="blog-girds-sec">
                    <div class="row">
                        @foreach (var item in Model)
                        {
                    <div class="col-md-6 blog-grid-top">
                        <div class="b-grid-top">
                            <div class="blog_info_left_grid">
                                <a href="~/News/Details/@item.NewsId">
                                    <img src="@Url.Content(item.Photo)" class="img-fluid" alt="">
                                </a>
                            </div>
                            <h3>
                                <a href="~/News/Details/@item.NewsId">@Html.DisplayFor(modelItem => item.Title)</a>
                            </h3>
                            <p>@Html.DisplayFor(modelItem => item.ResumeText)</p>
                        </div>
                        <ul class="blog-icons">
                            <li>
                                <a href="#">
                                    <i class="fa fa-calendar"> - </i>@Html.DisplayFor(modelItem => item.PostDate)
                                </a>
                            </li>
                            <li class="mx-2">
                                <a href="#">
                                    <i class="fa fa-address-card"></i>@Html.DisplayFor(modelItem => item.Author)
                                </a>
                            </li>
                            <li>
                                <a href="#">
                                    <i class="fa fa-window-maximize"></i>@Html.DisplayFor(modelItem => item.Category.Name)
                                </a>
                            </li>

                        </ul>
                    </div>
                        }
                 
                    </div>
                </div>
            </div>
                <!--//left-->
                <!--right-->
                <aside class="col-lg-4 agileits-w3ls-right-blog-con text-right">
                    
                    <div class="tech-btm">
                        <h4>Postagem Recentes</h4>
                        @foreach (var item in Model)
                        {
                    <div class="blog-grids row mb-3">
                        <div class="col-md-5 blog-grid-left">
                            <a href="~/News/Details/@item.NewsId">
                                <img src="@Url.Content(item.Capa)" class="img-fluida" alt="">
                            </a>
                        </div>
                        <div class="col-md-7 blog-grid-right">

                            <h5>
                                <a href="~/News/Details/@item.NewsId">@Html.DisplayFor(modelItem => item.ResumeText)</a>
                            </h5>
                            <div class="sub-meta">
                                <span>
                                    <i class="fa fa-clock"></i>@Html.DisplayFor(modelItem => item.PostDate)
                                </span>
                            </div>
                        </div>

                    </div>
                        }
                    
                    </div>
                    </div>

                </aside>
                <!--//right-->
            </div>
        </div>

    </section>
    <div class="text-center"><a href="~/News/Index"><h3 class="tittle">Mostrar Todas</h3></a></div>
    